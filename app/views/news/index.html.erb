<table>

    <tbody>

    <%= link_to "Nowa aktualność", new_news_path %>

    <div class="napis">
        Lista aktualności
    </div>
        <% @news.order('date DESC').each do |news| %>
            <tr>
            	<% if news.text_with_link != nil %>
                <td><%= news.text_with_link.html_safe %></td>
                <td><%= news.date.strftime("%Y-%m-%d %H:%M") %></td>
                
                <td><%= link_to "Usuń", news_path(news), method: :delete, data: {confirm: "Jesteś pewien, że chcesz usunąć aktualność?" } %></td>
                <td><%= link_to "Edytuj", edit_news_path(news) %></td>
                <% end %>
            </tr>
        <% end %>
        
    </tbody>
</table>
