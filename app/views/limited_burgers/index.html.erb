<table>

    <tbody>

    <%= link_to "Nowa limitowana edycja", new_limited_burger_path %>

    <div class="napis">
        Limitowana edycja
    </div>
    <tr bgcolor="#111">
        <td>Kiedy bedzie na stronie</td>
        <td>Data na stronie</td>
        <td>Nazwa burgera 1</td>
        <td>Skład burgera 1</td>
        <td>Nazwa burgera 2</td>
        <td>Skład burgera 2</td>
    </tr>
        <% @limited_burger.order('date DESC').each do |limited_burger| %>
            <tr>
            	
                
                <td><%= limited_burger.date %></td>
                <td><%= limited_burger.date_on_website %></td>
                <td><%= limited_burger.name1 %></td>
                <td><%= limited_burger.composition1 %></td>
                <td><%= limited_burger.name2 %></td>
                <td><%= limited_burger.composition2 %></td>
                <td><%= link_to "Usuń", limited_burger_path(limited_burger), method: :delete, data: {confirm: "Jesteś pewien, że chcesz usunąć edycję limitowaną?"}%></td>
                <td><%= link_to "Edytuj", edit_limited_burger_path(limited_burger) %></td>
                
            </tr>
        <% end %>
        
    </tbody>
</table>
